<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .headerLogo {
            tv-position: top-right;
            }

            .subtitle {
            text-align: center;
            tv-text-style: caption2;
            }

            .movieCard {
            width: 666;
            height: 308;
            border-radius: 12;
            background-color: rgba(255, 255, 255, 0.7);
            }

            .movieCardImage {
            width: 231;
            height: 308;
            tv-position: leading;
            background-color: rgba(255, 255, 255, 0.7);
            }

            .movieCardTitle {
            text-align: natural;
            tv-text-max-lines: 2;
            tv-position:top;
            tv-align: leading;
            margin: 32 32 0;
            tv-text-style:callout;
            color: rgba(255, 255, 255, 0.9);
            text-shadow: 2px 2px 8px #000000;
            }

            .movieCardSubtitle {
            text-align: natural;
            tv-text-max-lines: 1;
            tv-position:top;
            tv-align: leading;
            margin: 16 32 0;
            tv-text-style:subhead;
            color: rgba(255, 255, 255, 0.8);
            text-shadow: 2px 2px 8px #000000;
            }

            .imageGradient {
            tv-tint-color: linear-gradient(top, rgba(0, 0, 0, 0.4), transparent);
            }

            .channelLogo {
            tv-tint-color: rgba(0, 0, 0, 0.60);
            tv-highlight-color: rgb(255,255,255);
            margin: 8;
            }

            @media tv-template and (tv-theme:dark) {
            .channelLogo {
            tv-tint-color: rgba(255, 255, 255, 0.50);
            }

            .movieCard {
            background-color: rgba(0, 0, 0, 0.3);
            }
            }
        </style>
    </head>
    <stackTemplate>
        <prototypes>
            <lockup prototype="livetv-thumbplay">
                <img style="tv-placeholder: tv;" binding="@src:{image};" width="425" height="240"/>
                <row>
                    <badge class="channelLogo" binding="@src:{logo};" height="60" width="60"/>
                    <title binding="textContent:{title};"/>"
                </row>
            </lockup>
            <card prototype="movie-theater" class="movieCard" productDocumentURL="/XMLs/Product.xml">
                <background>
                    <img class="imageGradient" aspectFill="true" width="666" height="308" binding="@src:{cover};" />
                </background>
                <img class="movieCardImage" binding="@src:{image};" />
                <title class="movieCardTitle" binding="textContent:{title};" />
                <subtitle class="movieCardSubtitle" binding="textContent:{desc};" />
            </card>
            <lockup prototype="movie-thumbplay" productDocumentURL="/XMLs/Product.xml">
                <img style="tv-placeholder: movie;" binding="@src:{image};" width="526" height="300"/>
                <title binding="textContent:{title};"/>"
                <text class="subtitle" binding="textContent:{titleEn};"/>
            </lockup>
            <lockup prototype="movie-thumbnail" productDocumentURL="/XMLs/Product.xml">
                <img style="tv-placeholder: movie;" binding="@src:{image};" width="300" height="400"/>
                <title binding="textContent:{title};"/>"
                <text class="subtitle" binding="textContent:{titleEn};"/>
            </lockup>
            <lockup prototype="poster-brick">
                <img style="tv-placeholder: tv;" binding="@src:{image};" width="425" height="240"/>
            </lockup>
            <lockup prototype="poster-theater" productDocumentURL="/XMLs/Product.xml">
                <img binding="@src:{image};" width="900" height="300"/>
            </lockup>
        </prototypes>

        <banner>
            <organizer>
                <img id="headerLogo" width="295" height="90" class="headerLogo"/>
            </organizer>
        </banner>

        <collectionList>
        </collectionList>

    </stackTemplate>
</document>
