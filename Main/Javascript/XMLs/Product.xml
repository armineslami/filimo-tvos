<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .badge {
            tv-tint-color: rgb(255, 255, 255);
            }
            .placeholder {
            tv-placeholder: movie;
            }
            .title {
            text-align: right;
            tv-text-max-lines: 2;
            font-size: 65;
            font-weight: bold;
            tv-minimum-scale-factor: 0.7;
            margin-bottom: 20;
            }
            .englishTitle {
            text-align: right;
            tv-text-max-lines: 1;
            tv-text-style: headline;
            tv-minimum-scale-factor: 0.7;
            padding-top: -8;
            }
            .englishTitleInLockup {
            text-align: center;
            tv-text-style: caption2;
            color: rgb(255,255,255,0.5);
            tv-highlight-color: rgb(255,255,255);
            }
            .watchedOverlayImg {
            tv-position: bottom-trailing;
            }
        </style>
    </head>
    <loadingTemplate>
        <background>
            <heroImg src=''/>
        </background>
        <activityIndicator>
            <title/>
        </activityIndicator>
    </loadingTemplate>
    <productTemplate>
        <banner>
            <infoList>
                <info id="genreInfo">
                    <header>
                        <title>ژانر</title>
                    </header>
                    <text id="genre1"/>
                </info>
                <info>
                    <header>
                        <title/>
                    </header>
                    <text id="directorInfo"/>
                </info>
            </infoList>
            <stack>
                <text id="title" class="title"/>
                <text id="englishTitle" class="englishTitle"/>
                <row id="infoRow"/>
                <description id="productDescription" handlesOverflow="true"/>
                <row>
                    <buttonLockup loginDocumentURL="/XMLs/Login.xml" id="playButton" autoHightlight="true">
                        <badge src="resource://button-play"/>
                        <title>پخش فیلم</title>
                    </buttonLockup>
                    <buttonLockup id="previewButton">
                        <badge src="resource://button-preview"/>
                        <title>پیش نمایش</title>
                    </buttonLockup>
                    <buttonLockup loginDocumentURL="/XMLs/Login.xml" id="bookmarkButton">
                        <badge src="resource://button-add" class="badge"/>
                        <title>افزودن به نشان‌ها</title>
                    </buttonLockup>
                    <buttonLockup seasonsDocumentURL="/XMLs/Seasons.xml" id="seasonsButton">
                        <badge srcset="/Resources/seasons.png 1x, /Resources/seasons@2x.png 2x" width="54" height="36"/>
                        <title>فصل</title>
                    </buttonLockup>
                </row>
            </stack>
            <heroImg src=""/>
        </banner>
        <prototypes>
            <lockup movieDocumentURL="/XMLs/Movie.xml" prototype="similarArtwork">
                <img class="placeholder" binding="@src:{movie_img_b};" width="225" height="300"/>
                <title binding="textContent:{movie_title};"/>
                <text class="englishTitleInLockup" binding="textContent:{movie_title_en};"/>
                <placeholder tag="progress"/>
                <rules>
                    <specialize state="({watch_fraction}-greater-than-equal:0.9)">
                        <overlay tag="progress">
                            <badge class="watchedOverlayImg" src="resource://overlay-checkmark"/>
                        </overlay>
                    </specialize>
                    <specialize state="({watch_fraction}-greater-than:0)">
                        <overlay tag="progress">
                            <progressBar binding="@value:{watch_fraction}"/>
                        </overlay>
                    </specialize>
                </rules>
            </lockup>
        </prototypes>
        <shelf id="allEpisodes"/>
        <shelf>
            <header>
                <title id="recommendationStaticTitle"/>
            </header>
            <section id="recommendation" binding="items:{items};">
            </section>
        </shelf>
        <shelf>
            <header>
                <title>امتیاز و نظرات</title>
            </header>
            <section id="reviewsSection">
                <ratingCard>
                    <title style="tv-minimum-scale-factor: 0.5"/>
                    <ratingBadge/>
                    <description/>
                </ratingCard>
            </section>
        </shelf>
        <shelf id="castsShelf">
            <header>
                <title/>
            </header>
            <section>
            </section>
        </shelf>
    </productTemplate>
</document>
