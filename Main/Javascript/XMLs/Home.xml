<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .headerLogo {
                tv-position: top-right;
                width: 295;
                height: 90;
            }
            .image {
                tv-placeholder: movie;
            }
            .imageDisabled {
                tv-placeholder: movie;
                tv-tint-color: rgba(1,1,1,0.6)
            }
            .englishTitle {
                text-align: center;
                tv-text-style: caption2;
            }
            .overlayTitle {
				tv-text-style: body;
				padding: 24;
                text-align: center;
                tv-align: center;
                tv-position: center;
				tv-text-max-lines: 0;
				color: rgba(255, 255, 255, 1.0);
                text-shadow: 2px 2px 8px #000000;
			}
            .lockup {
                padding: 0 0 72 0;
            }
            .loginButton {
                text-align: center;
                tv-text-style: body;
                padding: 12;
            }
            .reloadButton {
                text-align: center;
                tv-text-style: body;
                margin: 0 20 0 20;
            }
            .leftAlignedRow {
                tv-position: bottom-left;
                tv-align: left;
            }
        </style>
    </head>
    <loadingTemplate>
        <activityIndicator>
            <title>در حال دریافت اطلاعات…</title>
        </activityIndicator>
    </loadingTemplate>
    <stackTemplate>
        <banner>
            <organizer>
                <img class="headerLogo" srcset="/Resources/logo_filimo.png (theme:light), /Resources/logo_filimo_dark.png (theme:dark)" alt="Filimo Logo" />
                <row class="leftAlignedRow">
                    <buttonLockup id="reloadButton" class="reloadButton">
                        <badge srcset="/Resources/reload.png 1x, /Resources/reload@2x.png 2x" width="60" height="60"/>
                        <title>تازه کردن</title>
                    </buttonLockup>
                    <buttonLockup id="loginButton" loginDocumentURL="/XMLs/Login.xml" class="loginButton">
                        <badge srcset="/Resources/login.png 1x, /Resources/login@2x.png 2x" width="60" height="60"/>
                        <title>ورود</title>
                    </buttonLockup>
                </row>
            </organizer>
        </banner>
        <collectionList>
        </collectionList>
    </stackTemplate>
</document>
