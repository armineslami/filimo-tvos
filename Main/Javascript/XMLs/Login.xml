<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .qrCode {
            tv-align: center;
            tv-position: center;
            margin: 40;
            }

            .description {
            tv-align: center;
            tv-position: center;
            text-align: center;
            tv-text-style: subtitle1;
            color: rgb(0,0,0);
            tv-text-max-lines: 20;
            }

            .code {
            tv-align: center;
            font-family: "Menlo", system-ui;
            font-size: 90;
            color: rgb(253,112,46);
            }

            @media tv-template and (tv-theme:dark) {
            .description {
            color: rgb(255,255,255);
            }
            .qrCode {
            color: rgb(245,141,49);
            }
            }
        </style>
    </head>
    <divTemplate>
        <img id="codeImage" class="qrCode" width="320" height="320"/>
        <title id="descContainer1" class="description"/>
        <title class="code">
            <b id="verificationCode"/>
        </title>
        <title id="descContainer2" class="description"/>
    </divTemplate>
</document>
