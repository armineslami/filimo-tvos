<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .categoryCard {
            width: 830;
            height: 180;
            border-radius: 12;
            background-color: rgba(255, 255, 255, 0.7);
            }

            .categoryTitle {
            text-align: natural;
            tv-text-max-lines: 1;
            tv-position:bottom;
            tv-align: leading;
            margin: 16;
            tv-text-style: callout;
            color: rgba(255, 255, 255, 0.9);
            text-shadow: 2px 2px 8px #000000;
            }

            @media tv-template and (tv-theme:dark) {
            .categoryCard {
            background-color: rgba(0, 0, 0, 0.3);
            }
            }

        </style>
    </head>
    <stackTemplate>
        <prototypes>
            <card class="categoryCard" productsListDocumentURL="/XMLs/ProductsList.xml" prototype="category">
                <background>
                    <img aspectFill="true" binding="@src:{image};" width="830" height="180"/>
                </background>
                <title class="categoryTitle" binding="textContent:{title};"/>
            </card>
        </prototypes>

        <collectionList>
            <grid>
                <section binding="items:{categories};"/>
            </grid>
        </collectionList>
    </stackTemplate>
</document>
