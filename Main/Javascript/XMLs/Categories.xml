<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .paddedOverlay {
            padding: 0 16 16 0;
            }
            .shadowedTitle {
            text-shadow: 2px 2px 8px #000000;
            }
        </style>
    </head>
    <stackTemplate>
        <prototypes>
            <lockup productsListDocumentURL="/XMLs/ProductsList.xml" prototype="category">
                <img binding="@src:{image};" width="830" height="180"/>
                <overlay class="paddedOverlay">
                    <title class="shadowedTitle" binding="textContent:{title};"/>
                </overlay>
            </lockup>
        </prototypes>

        <collectionList>
            <grid>
                <section binding="items:{categories};"/>
            </grid>
        </collectionList>
    </stackTemplate>
</document>
